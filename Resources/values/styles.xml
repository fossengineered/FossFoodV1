<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/colorBgGrey</item>
		<item name="android:statusBarColor">@color/colorBgBlack</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="NavIcon">
		<item name="android:layout_width">50dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:backgroundTint">@color/colorBgGrey</item>
		<item name="android:layout_marginBottom">@dimen/nav_icon_spacing</item>
		<item name="android:scaleType">center</item>
	</style>

	<style name="NavHeaderTitle">
		<item name="android:textSize">@dimen/nav_header_title_text</item>
		<item name="android:textColor">@color/colorBgWhite</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

	<style name="Button.Green" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@android:color/holo_green_light</item>
		<item name="android:layout_marginRight">20px</item>
	</style>

	<style name="Button.Blue" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:layout_marginRight">20px</item>
	</style>

	<style name="Button.Red" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@android:color/holo_red_light</item>
		<item name="android:layout_marginRight">20px</item>
	</style>

</resources>
