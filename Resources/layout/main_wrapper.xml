<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout3">
        <TextView
            style="@style/NavHeaderTitle"
            android:text="Large Text"            
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nav_header_title" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2" />
    <LinearLayout
        android:id="@+id/fixedSubmitButtonlayout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/activity_horizontal_margin"
      >
        <ImageButton
            android:id="@+id/nav_btn_schedule"
            android:contentDescription="Schedule"
            android:background="@drawable/baseline_calendar_month_24"
            android:text=""
            style="@style/NavIcon"/>
        <ImageButton
            android:id="@+id/nav_btn_tickets"
            android:contentDescription="Tickets"
            android:background="@drawable/baseline_receipt_24"
            android:text=""
            style="@style/NavIcon"/>
        <ImageButton
            android:id="@+id/nav_btn_checklist"
            android:contentDescription="Check List"
            android:background="@drawable/baseline_check_circle_24"
            android:text=""
            style="@style/NavIcon"/>
        <ImageButton
            android:id="@+id/nav_btn_sales"
            android:contentDescription="Sales"
            android:background="@drawable/baseline_request_page_24"
            android:text=""
            style="@style/NavIcon"/>
        <ImageButton
            android:id="@+id/nav_btn_store"
            android:contentDescription="Store"
            android:background="@drawable/baseline_store_24"
            android:text=""
            style="@style/NavIcon"/>
        <ImageButton
            android:id="@+id/nav_btn_settings"
            android:contentDescription="Tickets"
            android:background="@drawable/outline_settings_24"
            android:text=""
            style="@style/NavIcon"/>
    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_content"
        android:inflatedId="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        />
</RelativeLayout >