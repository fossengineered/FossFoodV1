<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/checklist_recycler"
        android:layout_marginBottom="80dp"/>
    <com.google.android.material.tabs.TabLayout
        android:minWidth="25px"
        android:minHeight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="#000000"
        android:id="@+id/checklist_tabs"
        app:tabMode="scrollable"
        android:layout_gravity="bottom|end">
    </com.google.android.material.tabs.TabLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_gravity="bottom|start"
        android:id="@+id/enter_checklist_name_box"
        android:visibility="invisible"
        android:background="@color/colorBgWhite">
        <EditText
            android:inputType="textPersonName"
            android:hint="Enter Checklist Name"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:layout_marginRight="15dp"
            android:id="@+id/txt_checklist_name"
            />
        <TextView
            android:text=""
            android:drawableLeft="@drawable/baseline_done_24"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_accept_add_checklist"
            android:layout_marginRight="15dp"/>
        <!--<TextView
            android:text=""
            android:drawableLeft="@drawable/baseline_close_24"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_close_add_checklist" />-->
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
