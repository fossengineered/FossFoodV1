<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/abc_button_inset_vertical_material"
        android:paddingTop="@dimen/abc_button_inset_vertical_material"
        android:orientation="horizontal"
        android:background="@color/colorBgWhite"
        android:layout_gravity="bottom|end"
        >
        <Button
            android:text="View Closed Tickets"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/button1" />
        
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="15dp"
        android:id="@+id/recycler_tickets" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_order"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add"
        android:tint="@android:color/black"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
